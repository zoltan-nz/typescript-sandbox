{
  "name": "typescript-sandbox",
  "version": "1.0.0",
  "description": "Playing with Streams and Transform and CSV",
  "main": "index.js",
  "scripts": {
    "clean": "del ./dist",
    "prettier": "prettier --write ./**/*.{ts,tsx,js,jsx,json}",
    "lint": "run-s prettier && tslint --project ./tsconfig.json --fix",
    "build": "run-p clean lint && tsc",
    "test": "jest",
    "watch:build": "onchange '**/*.ts' -- tsc {{changed}}",
    "watch:prettier": "onchange '**/*.ts' -- prettier --write {{changed}}",
    "watch:lint": "onchange '**/*.ts' -- tslint --fix --project ./tsconfig.json {{changed}}",
    "watch:test": "CI=true jest --watchAll",
    "debug": "NODE_ENV=development DEBUG=* node --inspect-brk --require ts-node/register",
    "dev": "concurrently --names 'BUILD,TEST' -c 'yellow,cyan' 'npm run watch:build' 'npm run watch:test'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-nz/typescript-sandbox.git"
  },
  "author": "Zoltan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoltan-nz/typescript-sandbox/issues"
  },
  "homepage": "https://github.com/zoltan-nz/typescript-sandbox#readme",
  "devDependencies": {
    "@types/csv-parse": "^1.1.11",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.0",
    "concurrently": "^3.6.1",
    "del-cli": "^1.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "csv-parse": "^2.5.0",
    "fs-extra": "^7.0.0",
    "tslib": "^1.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "(^__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "testEnvironment": "node"
  }
}
