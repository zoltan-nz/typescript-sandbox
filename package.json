{
  "name": "typescript-sandbox",
  "version": "1.0.0",
  "description": "Playing with Streams and Transform and CSV",
  "main": "index.js",
  "scripts": {
    "clean": "del ./dist",
    "lint": "tslint --project ./tsconfig.json --fix",
    "build": "npm run lint && tsc",
    "test": "jest",
    "watch:build": "tsc --watch",
    "watch:lint": "chokidar src/**/*.ts --initial --silent -c 'npm -s run lint'",
    "watch:test": "CI=true jest --watchAll",
    "debug": "NODE_ENV=development DEBUG=* node --inspect-brk --require ts-node/register",
    "dev": "concurrently --names 'BUILD,TEST' -c 'yellow,cyan' 'npm run watch:build' 'npm run watch:test'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-nz/typescript-sandbox.git"
  },
  "author": "Zoltan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoltan-nz/typescript-sandbox/issues"
  },
  "homepage": "https://github.com/zoltan-nz/typescript-sandbox#readme",
  "devDependencies": {
    "@types/csv-parse": "^1.1.11",
    "@types/fs-extra": "^5.0.3",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.6.0",
    "del-cli": "^1.1.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "(^__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "csv-parse": "^2.5.0",
    "fs-extra": "^6.0.1"
  }
}
